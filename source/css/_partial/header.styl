#header
  text-shadow 0 0 1px #fff
  background #F5F5F2 url("http://scriptogr.am/assets/cimg/6640/cimg.jpg") no-repeat top center fixed
  background-size 100% auto
  width 100%
  height 300px

  a
    color #999
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight normal
    font-size 2.5em
    line-height 1

  h2
    font-weight normal
    font-size 0.9em
    line-height 1
    margin-top 10px

  .group-text
    text-align center  
  
  #main-nav
    font-family font-title
    line-height 2.5em
    float right
    margin 1em 2%
    ul
      list-style none
      li
        float left
        margin-left 30px

